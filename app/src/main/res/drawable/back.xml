<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="180" android:endColor="@color/et_focus_color" android:startColor="@color/et_focus_color" />
            <stroke android:width="1dip" android:color="@color/et_focus_color" />
            <corners android:radius="0dp" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient android:angle="180" android:endColor="@color/et_focus_color" android:startColor="@color/et_focus_color" />
            <stroke android:width="1dip" android:color="@color/et_focus_color" />
            <corners android:radius="0dp" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>
    </item>
    <item  android:state_active="true">
        <shape>
            <gradient android:angle="180" android:endColor="#FDFDFD" android:startColor="#FDFDFD" />
            <stroke android:width="1dip" android:color="#FDFDFD" />
            <corners android:radius="0dp" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>
    </item>
</selector>